{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "lib": ["ES2021"],
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["bin", "lib"]
}
